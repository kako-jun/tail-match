# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tailmatch
DB_USER=tailmatch_user
DB_PASSWORD=your_secure_password_here

# Full Database URL (for Next.js)
DATABASE_URL=postgresql://tailmatch_user:your_secure_password_here@localhost:5432/tailmatch

# Next.js Configuration
NEXT_PORT=3000
NODE_ENV=development

# OpenAI API (for scraping AI features - Phase 2)
OPENAI_API_KEY=your_openai_api_key_here

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_SECONDS=4
MAX_CONCURRENT_SCRAPES=3

# Monitoring (optional)
LOG_LEVEL=info